generator client {
  provider   = "prisma-client-js"
  output     = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // Custom fields
  password      String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  
  // Relations
  watchHistory  WatchHistory[]
  watchlist     Watchlist[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model Drama {
  id            String    @id @default(cuid())
  title         String
  description   String
  posterUrl     String
  bannerUrl     String
  tags          String    // JSON-encoded array
  cast          String    // JSON-encoded object
  vibe          String    // "GreenFlag", "HeartWrenching", "Wuxia", etc.
  releaseYear   Int?
  totalEpisodes Int?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  episodes      Episode[]
  onWatchlists  Watchlist[]
}

model Watchlist {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  drama     Drama    @relation(fields: [dramaId], references: [id], onDelete: Cascade)
  dramaId   String
  createdAt DateTime @default(now())

  @@unique([userId, dramaId])
}

model Episode {
  id            String         @id @default(cuid())
  title         String
  thumbnail     String
  videoUrl      String
  duration      Int            // in seconds
  episodeNumber Int
  drama         Drama          @relation(fields: [dramaId], references: [id], onDelete: Cascade)
  dramaId       String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  watchHistory  WatchHistory[]

  @@unique([dramaId, episodeNumber])
}

model WatchHistory {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  episode      Episode  @relation(fields: [episodeId], references: [id], onDelete: Cascade)
  episodeId    String
  lastPosition Int      @default(0) // in seconds
  isCompleted  Boolean  @default(false)
  updatedAt    DateTime @updatedAt

  @@unique([userId, episodeId])
}
