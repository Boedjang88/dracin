generator client {
  provider   = "prisma-client-js"
  output     = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id           String         @id @default(cuid())
  email        String         @unique
  password     String
  name         String?
  avatar       String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  watchHistory WatchHistory[]
  watchlist    Watchlist[]
}

model Drama {
  id            String    @id @default(cuid())
  title         String
  description   String
  posterUrl     String
  bannerUrl     String
  tags          String    // JSON-encoded array
  cast          String    // JSON-encoded object
  vibe          String    // "GreenFlag", "HeartWrenching", "Wuxia", etc.
  releaseYear   Int?
  totalEpisodes Int?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  episodes      Episode[]
  onWatchlists  Watchlist[]
}

model Watchlist {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  drama     Drama    @relation(fields: [dramaId], references: [id], onDelete: Cascade)
  dramaId   String
  createdAt DateTime @default(now())

  @@unique([userId, dramaId])
}

model Episode {
  id            String         @id @default(cuid())
  title         String
  thumbnail     String
  videoUrl      String
  duration      Int            // in seconds
  episodeNumber Int
  drama         Drama          @relation(fields: [dramaId], references: [id], onDelete: Cascade)
  dramaId       String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  watchHistory  WatchHistory[]

  @@unique([dramaId, episodeNumber])
}

model WatchHistory {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  episode      Episode  @relation(fields: [episodeId], references: [id], onDelete: Cascade)
  episodeId    String
  lastPosition Int      @default(0) // in seconds
  isCompleted  Boolean  @default(false)
  updatedAt    DateTime @updatedAt

  @@unique([userId, episodeId])
}
